
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 120px;" class="container">

    <div style="position: relative; padding-bottom: 100px">

        <div style="font-weight: 700; font-size: 20px; color: red; margin-bottom: 5px"> Quét mã QR bên dưới và chuyển khoản với nội dung sau: @ViewBag.strPay</div>
        <div style="font-weight: 700; font-size: 20px; color: red; margin-bottom: 5px"> Tổng tiền: @ViewBag.totalPrice</div>

        <div style="display: flex; justify-content: center; margin-top: 10px;">
            <img style="width:50% ; height: 50%; " src="~/Data/images/pay.jpg" />
        </div>

        <div style="display: flex; justify-content: center; margin-top: 10px;">
            <a href="@Url.Action("Cart", "Home", new { success = true})" style="padding: 8px 12px; width: 200px; background-color: #e4002b; text-align: center; color: white; font-size: 18px; font-weight: 700; border-radius: 40px;">Xác Nhận</a>
        </div>
    </div>

</div>
